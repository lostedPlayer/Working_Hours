<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Secondary_color">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Reminder Time"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TimePicker
        android:id="@+id/timepickerDialog_timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:timePickerMode="spinner" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timepickerDialog_timePicker"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/Add_workHours_dialog_button_bc"
            android:text="@string/Add_Data_Dialog_Cancle_Button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/Add_workHours_dialog_button_bc"
            android:text="@string/Add_Data_Dialog_Save_Button" />

    </RelativeLayout>


</RelativeLayout>